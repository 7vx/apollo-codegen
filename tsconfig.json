{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["es2017", "esnext.asynciterable", "dom"],
    "removeComments": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "allowUnreachableCode": true,
    "baseUrl": "packages/",
    "sourceRoot": "packages/",
  },
  "include" : [
    "packages/**/*",
    "lib/**/*",
    "misc/**/*",
    "types/**/*"
  ]
}
